language: rust

rust:
  - stable
  - beta
  - nightly

os:
  - linux
  - osx

before_script:
  - rustup component add rustfmt clippy

script:
  - cargo clippy -- -D warnings
  - cargo fmt --all -- --check
  - cargo build --verbose --all --all-features
  - cargo test --verbose --all --all-features

cache: cargo

matrix:
  allow_failures:
    - rust: nightly